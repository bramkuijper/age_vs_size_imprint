\begin_inset Formula 
\begin{align}
r_{\mathrm{f}\rightarrow\text{own juv},\mathrm{f}}^{\mathrm{PI}} & =\ell\hat{Q}_{\mathrm{fm}},\ r_{\mathrm{f}\rightarrow\text{own\ juv},\mathrm{m}}^{\mathrm{PI}}=\ell\hat{Q}_{\mathrm{fm}}\label{eq:relatedness:diploid:PI:rownjuvF}\\
r_{\mathrm{m}\rightarrow\text{own juv},\mathrm{f}}^{\mathrm{PI}} & =1,\ r_{\mathrm{m}\rightarrow\text{own\ juv},\mathrm{m}}^{\mathrm{PI}}=1.\label{eq:relatedness:diploid:PI:rownjuvM}
\end{align}

\end_inset

