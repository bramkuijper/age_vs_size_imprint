\begin_layout Subsubsection
Coefficients of consanguinity
\end_layout

\begin_layout Standard
The coefficient of consanguinity 
\begin_inset Formula $Q_{\mathrm{f}}$
\end_inset

 and 
\begin_inset Formula $Q_{\mathrm{m}}$
\end_inset

 between two randomly sampled allele copies in the same female or male individua
l is given by
\begin_inset Formula 
\begin{align}
Q_{\mathrm{f}} & =\frac{1}{2}\left(1+\ell Q_{\mathrm{fm}}\right)\label{eq:relatedness:haplodiploid:Qf}\\
Q_{\mathrm{m}} & =1.\label{eq:relatedness:haplodiploid:Qm}
\end{align}

\end_inset

Coefficients of consanguinity between juveniles are
\begin_inset Formula 
\begin{align}
Q_{\mathrm{ff}}^{\mathrm{j}} & =\frac{1}{4}\left(\frac{1}{n_{\mathrm{f}}}Q_{\mathrm{f}}+\frac{n_{\mathrm{f}}-1}{n_{\mathrm{f}}}Q_{\mathrm{ff}}\right)+\frac{1}{2}\ell Q_{\mathrm{fm}}+\frac{1}{4}\ell^{2}\left(\frac{1}{n_{\mathrm{m}}}Q_{\mathrm{m}}+\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}Q_{\mathrm{mm}}\right).\label{eq:relatedness:haplodiploid:Qffj}\\
Q_{\mathrm{fm}}^{\mathrm{j}} & =Q_{\mathrm{mf}}^{\mathrm{j}}=\frac{1}{2}\left(\frac{1}{n_{\mathrm{f}}}Q_{\mathrm{f}}+\frac{n_{\mathrm{f}}-1}{n_{\mathrm{f}}}Q_{\mathrm{ff}}\right)+\frac{1}{2}\ell Q_{\mathrm{fm}}\label{eq:relatedness:haplodiploid:Qfmj}\\
Q_{\mathrm{mm}}^{\mathrm{j}} & =\frac{1}{n_{\mathrm{f}}}Q_{\mathrm{f}}+\frac{n_{\mathrm{f}}-1}{n_{\mathrm{f}}}Q_{\mathrm{ff}}\label{eq:relatedness:haplodiploid:Qmmj}
\end{align}

\end_inset

and coefficients of consanguinity between adults are then
\begin_inset Formula 
\begin{align}
Q_{\mathrm{ff}} & =h_{\mathrm{f}}^{2}Q_{\mathrm{ff}}^{\mathrm{j}}\label{eq:relatedness:haplodiploid:Qff}\\
Q_{\mathrm{fm}} & =Q_{\mathrm{mf}}=h_{\mathrm{f}}h_{\mathrm{m}}Q_{\mathrm{fm}}^{\mathrm{j}}\label{eq:relatedness:haplodiploid:Qfm}\\
Q_{\mathrm{mm}} & =h_{\mathrm{m}}^{2}Q_{\mathrm{mm}}^{\mathrm{j}},\label{eq:relatedness:haplodiploid:Qmm}
\end{align}

\end_inset


\end_layout

