\end_layout

\begin_layout Standard
Relatedness coefficients between the focal adult female breeder and a paternally
-inherited allele in a randomly sampled adult breeder (female and male respectiv
ely) are given by
\begin_inset Formula 
\begin{align}
r_{\mathrm{f}\rightarrow\mathrm{f}}^{\mathrm{PI}} & =\frac{1}{2}\frac{1}{n_{\mathrm{f}}}\left(1+\ell\hat{Q}_{\mathrm{fm}}\right)+\frac{1}{2}\frac{n_{\mathrm{f}}-1}{n_{\mathrm{f}}}\ell\left(\hat{Q}_{\mathrm{fm}}+\ell\hat{Q}_{\mathrm{mm}}\right)\label{eq:relatedness:diploid:PI:rf->f}\\
r_{\mathrm{f}\rightarrow\mathrm{m}}^{\mathrm{PI}} & =\frac{1}{2}\ell\frac{1}{n_{\mathrm{m}}}\left(\hat{Q}_{\mathrm{m}}+\hat{Q}_{\mathrm{fm}}\right)+\frac{1}{2}\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}\ell\left(\ell\hat{Q}_{\mathrm{mm}}+\hat{Q}_{\mathrm{fm}}\right)\label{eq:relatedness:diploid:PI:rf->m}\\
r_{\mathrm{m}\rightarrow\mathrm{f}}^{\mathrm{PI}} & =\frac{1}{2}\ell\frac{1}{n_{\mathrm{m}}}\left(\hat{Q}_{\mathrm{m}}+\hat{Q}_{\mathrm{fm}}\right)+\frac{1}{2}\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}\ell\left(\ell\hat{Q}_{\mathrm{mm}}+\hat{Q}_{\mathrm{fm}}\right)\label{eq:relatedness:diploid:PI:rm->f}\\
r_{\mathrm{m}\rightarrow\mathrm{m}}^{\mathrm{PI}} & =\frac{1}{2}\frac{1}{n_{\mathrm{m}}}\left(1+\ell\hat{Q}_{\mathrm{fm}}\right)+\frac{1}{2}\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}\ell\left(\ell\hat{Q}_{\mathrm{mm}}+\hat{Q}_{\mathrm{fm}}\right)\label{eq:relatedness:diploid:PI:rm->m}
\end{align}

\end_inset

Relatedness coefficients between the focal adult female breeder and a paternally
-inherited allele in a randomly sampled juvenile breeder (female and male
 respectively) are given by
\begin_inset Formula 
\begin{align}
r_{\mathrm{f}\rightarrow\mathrm{juvf}}^{\mathrm{PI}} & =\ell\hat{Q}_{\mathrm{fm}}\label{eq:relatedness:diploid:PI:rfjuvf}\\
r_{\mathrm{f}\rightarrow\mathrm{juvm}}^{\mathrm{PI}} & =\ell\hat{Q}_{\mathrm{fm}}.\label{eq:relatedness:diploid:PI:rfjuvm}
\end{align}

\end_inset

Relatedness coefficients between a paternally-inherited allele in a randomly
 sampled juvenile breeder (female and male respectively) and the focal adult
 male breeder are given by
\begin_inset Formula 
\begin{align}
r_{\mathrm{m}\rightarrow\mathrm{juvf}}^{\mathrm{PI}} & =\ell\left(\frac{1}{n_{\mathrm{m}}}\hat{Q}_{\mathrm{m}}+\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}\hat{Q}_{\mathrm{mm}}\right)\label{eq:relatedness:diploid:PI:rmjuvf}\\
r_{\mathrm{m}\rightarrow\mathrm{juvm}}^{\mathrm{MI}} & =\ell\left(\frac{1}{n_{\mathrm{m}}}\hat{Q}_{\mathrm{m}}+\frac{n_{\mathrm{m}}-1}{n_{\mathrm{m}}}\hat{Q}_{\mathrm{mm}}\right).\label{eq:relatedness:diploid:PI:rmjuvm}
\end{align}

\end_inset


\end_layout

